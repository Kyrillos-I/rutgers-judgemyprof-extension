{
    "manifest_version": 3,
    "name": "Rutgers JudgeMyProfessor",
    "description": "Display the RateMyProfessors ratings for Rutgers professors on WebReg",
    "version": "1.0",

    "content_scripts": [{
        "matches": ["https://sims.rutgers.edu/webreg/courseLookup.htm?_flowId=lookup-flow"],
        "js": ["content.js"]
    }],

    "externally_connectable": {
        "matches": ["https://ratemyprofessors.com/*"]
    },
    "action": {
        "default_popup": "jmp_popup.html",
        "default_icon": "logo128.png"
    },
    "icons": {
        "16": "logo16.png",
        "32": "logo32.png",
        "48": "logo48.png",
        "128": "logo128.png"
    }
}