{
    "manifest_version": 3,
    "name": "Rutgers JudgeMyProfessor",
    "description": "Seamlessly integrates with the Rutgers course registration system to provide valuable insights into your professor's teaching quality",
    "version": "1.0",

    "content_scripts": [{
        "matches": [
            "https://sims.rutgers.edu/webreg/*",
            "*://sis.rutgers.edu/*"
        ],
        "js": ["src/js/content.js"],
        "all_frames": true
    }],

    "externally_connectable": {
        "matches": ["https://ratemyprofessors.com/*"]
    },
    "action": {
        "default_popup": "src/html/jmp_popup.html",
        "default_icon": "src/assets/icons/logo128.png"
    },
    "icons": {
        "16": "src/assets/icons/logo16.png",
        "32": "src/assets/icons/logo32.png",
        "48": "src/assets/icons/logo48.png",
        "128": "src/assets/icons/logo128.png"
    }
}