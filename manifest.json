{
    "manifest_version": 3,
    "name": "Rutgers JudgeMyProfessor",
    "description": "Seamlessly integrates with the Rutgers course registration system to provide valuable insights into your professor's teaching quality",
    "version": "1.0",
    "content_scripts": [{
        "matches": [
            "*://sims.rutgers.edu/webreg/*",
            "*://sis.rutgers.edu/soc/*",
            "*://sis.rutgers.edu/oldsoc/*",
            "*://sims.rutgers.edu/csp/*"
        ],
        "js": ["./src/js/content.js"],
        "all_frames": true
    }],
    "host_permissions": ["https://www.ratemyprofessors.com/graphql/*"],
    "background": {
        "service_worker": "./src/js/background.js"
    },

    "externally_connectable": {
        "matches": ["https://www.ratemyprofessors.com/graphql/*"]
    },
    "action": {
        "default_popup": "./src/html/jmp_popup.html",
        "default_icon": "./src/assets/icons/logoOriginal.png"
    },
    "icons": {
        "16": "./src/assets/icons/logo16.png",
        "32": "./src/assets/icons/logo32.png",
        "48": "./src/assets/icons/logo48.png",
        "128": "./src/assets/icons/logo128.png"
    }
}